{
  "alias": {
    "font": {
      "fontFamily": {
        "primary": {
          "$type": "fontFamilies",
          "$value": "{global.font.fontFamily.polaris}"
        },
        "secondary": {
          "$type": "fontFamilies",
          "$value": "{global.font.fontFamily.open-sans}"
        }
      },
      "typography": {
        "lizzie": {
          "$type": "typography",
          "$value": {
            "fontFamily": "{alias.font.fontFamily.primary}",
            "fontWeight": "{global.font.fontWeight.regular}",
            "fontSize": "{global.font.fontSize.lg}",
            "lineHeight": "{global.font.lineHeight.140}"
          }
        },
        "charlie": {
          "$type": "typography",
          "$value": {
            "fontFamily": "{alias.font.fontFamily.secondary}",
            "fontWeight": "{global.font.fontWeight.regular}",
            "fontSize": "{global.font.fontSize.xs}",
            "lineHeight": "{global.font.lineHeight.140}"
          }
        }
      }
    }
  }
}